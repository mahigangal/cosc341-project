<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="5dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <solid android:color="#999999"/> <!-- Use the color you prefer for iMessage bubble -->
        </shape>
    </item>
    <item android:right="5dp" android:bottom="0dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="100%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="#999999"/> <!-- Use the same color as the bubble -->
            </shape>
        </rotate>
    </item>
</layer-list>
